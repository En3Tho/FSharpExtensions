<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <Authors> Igor Bagdamyan</Authors>
        <Description>A set of computation expressions for F# base library</Description>
        <Copyright>Copyright (c) 2022 Igor Bagdamyan</Copyright>
        <PackageProjectUrl>https://github.com/En3Tho/FSharpExtensions</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/En3Tho/FSharpExtensions/blob/main/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/En3Tho/FSharpExtensions</RepositoryUrl>
        <AssemblyVersion>1.1.9</AssemblyVersion>
        <FileVersion>1.1.9</FileVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>1.1.9</PackageVersion>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <!-- Optional: Publish the repository URL in the built .nupkg (in the NuSpec <Repository> element) -->
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <!-- Optional: Build symbol package (.snupkg) to distribute the PDB containing Source Link -->
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <LangVersion>preview</LangVersion>
        <AssemblyOriginatorKeyFile>ComputationExpressions.snk</AssemblyOriginatorKeyFile>
        <PublicSign>true</PublicSign>
    </PropertyGroup>

    <ItemGroup>
      <Compile Include="GenericUnitBuilderBase.fs" />
      <Compile Include="GenericCollectionCodeExtensions.fs" />
      <Compile Include="ArrayPoolBasedBuilders.fs" />
      <Compile Include="CollectionBuilderExtensions.fs" />
      <Compile Include="OptionBuilder.fs" />
      <Compile Include="ResultBuilder.fs" />
      <Compile Include="CodeBuilder.fs" />
      <Compile Include="TaskBuilders\TaskBuildersIntrinsics.fs" />
      <Compile Include="TaskBuilders\AwaiterHelper.fs" />
      <Compile Include="TaskBuilders\TaskBuilderExtensions.fs" />
      <Compile Include="TaskBuilders\UnitTaskBuilder.fs" />
      <Compile Include="TaskBuilders\UnitValueTaskBuilder.fs" />
      <Compile Include="TaskBuilders\ValueTaskBuilder.fs" />
      <Compile Include="TaskBuilders\ValueTaskOptionBuilder.fs" />
      <Compile Include="TaskBuilders\ValueTaskResultBuilder.fs" />
      <Compile Include="TaskBuilders\ValueTaskExnResultBuilder.fs" />
      <Compile Include="TaskBuilders\TaskBuilders.fs" />
      <Compile Include="ValueTaskExtensions.fs" />
    </ItemGroup>

    <ItemGroup>      
      <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Update="FSharp.Core" Version="7.0.0" />      
    </ItemGroup>
    
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="6.0.0" />
        <PackageReference Include="System.Buffers" Version="4.5.1" />
        <PackageReference Include="System.Collections.Immutable" Version="1.5.0" />
        <PackageReference Include="System.Memory" Version="4.5.4" />
        <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.4" />
    </ItemGroup>

</Project>
